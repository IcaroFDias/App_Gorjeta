<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Summeryactivity">

    <TextView
        android:id="@+id/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Veja abaixo o resumo da sua conta"

        app:layout_constraintStart_toStartOf="@+id/titlle"
        app:layout_constraintTop_toBottomOf="@+id/titlle" />

    <TextView
        android:id="@+id/titlle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary"
        android:textSize="32dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_total_mesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total da conta"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/sub_title"
        app:layout_constraintTop_toBottomOf="@+id/sub_title" />

    <TextView
        android:id="@+id/tv_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
       android:text="R$205"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_total_mesa" />

    <TextView
        android:id="@+id/tv_Nbmer_People"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Numero de pessoas"
        app:layout_constraintStart_toStartOf="@+id/tv_total_mesa"
        app:layout_constraintTop_toBottomOf="@+id/tv_total_mesa" />

    <TextView
        android:id="@+id/tv_total_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="5"
        app:layout_constraintEnd_toEndOf="@+id/tv_total_amount"
        app:layout_constraintTop_toBottomOf="@+id/tv_total_amount" />

    <TextView
        android:id="@+id/tv_Percetage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Porcetagem de gorjeta"
        app:layout_constraintStart_toStartOf="@+id/tv_Nbmer_People"
        app:layout_constraintTop_toBottomOf="@+id/tv_Nbmer_People" />

    <TextView
        android:id="@+id/tv_value_percetage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="15%"
        app:layout_constraintEnd_toEndOf="@+id/tv_total_people"
        app:layout_constraintTop_toBottomOf="@+id/tv_total_people" />

    <View
        android:id="@+id/Separate"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/black"

        app:layout_constraintTop_toBottomOf="@+id/tv_Percetage" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Total por pessoa: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_Nbmer_People"
        app:layout_constraintTop_toBottomOf="@+id/Separate" />

    <TextView
        android:id="@+id/tv_totalamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="R$ 40,50"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_total_people"
        app:layout_constraintTop_toBottomOf="@+id/Separate" />

    <Button
        android:id="@+id/btn_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>